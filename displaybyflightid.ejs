<style>
  .maincontainer{
      display: flex;
      justify-content: center;
  
      background:#c8d6e5;
      height: 100vh;
  }    
  .root{
    width: 1300px;
    height: auto; 
    background:#FFF;
    padding: 10px;
    
  }
  .heading{
    color:#4834d4;
    font-size: 32px;
    font-weight: bold;
    font-family: Oxygen;
    display: flex;
    justify-content: center;
    padding: 5px;
  }
  .rowgap{
  margin-top: 40px;}
  
  
  
  </style>
  
  
  <html>
   
      <head>
          <!--Import Google Icon Font-->
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
          
         <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function(){
      $('select').formSelect();
    });
    
    $(document).ready(function(){
      $('.timepicker').timepicker();
    });
    
    </script>
    <script src="/javascripts/project.js"></script>
        </head>
   
  <body>
  <form action="/flight/editdeleterecord" method="post">
  <div class="maincontainer"> 
  <div class="root" >
     
    <div class="heading">
      <span><img src="/images/airindia.png" width="50"></span> Flight Enquiry System
      </div>
      <hr>
      <div class="row">
        <div class="col s6">
            <div class="input-field">
                <i class="material-icons prefix">airplanemode_active</i>
                <input id="icon_fid" name="flightid" value="<%=data.flightid %>" type="text" readonly="true" class="validate">
                <label for="icon_fid">Flight Id</label>
              </div>

         </div>
          <div class="col s6">
              <div class="input-field">
                  <i class="material-icons prefix">business</i>
                  <input id="icon_com" name="companyname" value="<%=data.companyname %>" type="text" class="validate">
                  <label for="icon_com">Company Name</label>
                </div>

           </div>
      </div>   


      <div class="row">
          <div class="col s3">
             
            <div class="input-field">
              <i class="material-icons prefix">flight_takeoff</i>
              <select name="sourcestate" id="sourcestate">
                <option value="<%=data.sourcestateid %>"   selected><%=data.ss %></option>
                
              </select>
              <label>Source State</label>
            </div>
          </div>  

                <div class="col s3">
                  <div class="input-field">
                    <i class="material-icons prefix">flight_takeoff</i>
                    <select name="sourcecity" id="sourcecity">
                      <option value="<%=data.sourcecityid %>"  selected><%=data.sc %></option>
                      
                    </select>
                    <label>Source City</label>
                  </div>

           </div>
      


   
      
          <div class="col s3">
            <div class="input-field">
              <i class="material-icons prefix">flight_land</i>
              <select name="destinationstate" id="destinationstate">
                  <option value="<%=data.destinationstateid %>"  selected><%=data.ds %></option>
                
              </select>
              <label>Destination State</label>
            </div>
            </div>    

                <div class="col s3">
                  <div class="input-field">
                    <i class="material-icons prefix">flight_land</i>
                    <select name="destinationcity" id="destinationcity">
                      <option value="<%=data.destinationcityid %>"   selected><%=data.dc %></option>
                      
                    </select>
                    <label>Destination City</label>
                  </div>
                  
           </div>
      </div>     

      <div class="row">
          <div class="col s3">

      <div class="input-field">
          <select name="status">
            <option selected><%=data.status %></option>
            <option >Non Stop</option>
            <option >With Stop</option>
            
          </select>
          <label>Status</label>
        </div>
        </div>
        <% 
        var tclass=data.flightclass.split('#')
        var ts=['','','']
        for(i=0;i<tclass.length;i++)
        { if(tclass[i]=='Business')
          { ts[0]='checked'}
          if(tclass[i]=='Economy')
          { ts[1]='checked'}
          if(tclass[i]=='Executive')
          { ts[2]='checked'}
        }
    %>
        <div class="col s3" style="display: flex;flex-direction: row; justify-content:space-around;align-items: center;">
       
        <p>
          <label>
            <input name="fclass" value="Business" type="checkbox"  <%=ts[0] %>  />
            <span>Business</span>
          </label>
        </p>
      

        <p>
          <label>
            <input name="fclass" value="Economy" type="checkbox" <%=ts[1] %> />
            <span>Economy</span>
          </label>
        </p>
        
        <p>
          <label>
            <input name="fclass" value="Executive" type="checkbox" <%=ts[2] %> />
            <span>Executive</span>
          </label>
        </p>
        </div>
      

      
          <div class="col s3">

              
                  <div class="input-field">
                      <i class="material-icons prefix">access_time</i>
                      <input id="icon_sourcetime" value="<%=data.sourcetiming %>" name="sourcetime" type="text" class="timepicker">
                      <label for="icon_sourcetime">Source Timing</label>
                    </div>
          </div>

              
         

          <div class="col s3">

              <div class="input-field">
                  <i class="material-icons prefix">access_time</i>
                  <input id="icon_destime" name="destinationtime" value="<%=data.destinationtiming %>" type="text" class="timepicker">
                  <label for="icon_destime">Destination Timing</label>
                </div>
   
          </div>
      </div>    


      <div class="row">
      <div class="col s12" style="display: flex;flex-direction: row; justify-content:space-around;align-items: center;">
            
          <p>
            <label>
              <input name="days" value="Sunday" type="checkbox"  <%=data.days.includes('Sunday')?'checked':'' %> />
              <span>Sunday</span>
            </label>
          </p>

          <p>
              <label>
                <input name="days" value="Monday" type="checkbox" <%=data.days.includes('Monday')?'checked':'' %> />
                <span>Monday</span>
              </label>
            </p>
   
            <p>
              <label>
                <input name="days" value="Tuesday" type="checkbox" <%=data.days.includes('Tuesday')?'checked':'' %> />
                <span>Tuesday</span>
              </label>
            </p>
  
            <p>
              <label>
                <input name="days" value="Wednesday" type="checkbox" <%=data.days.includes('Wednesday')?'checked':'' %> />
                <span>Wednesday</span>
              </label>
            </p>
  
          
            <p>
              <label>
                <input name="days" value="Thursday" type="checkbox" <%=data.days.includes('Thursday')?'checked':'' %> />
                <span>Thursday</span>
              </label>
            </p>


            <p>
              <label>
                <input name="days" value="Friday" type="checkbox" <%=data.days.includes('Friday')?'checked':'' %> />
                <span>Friday</span>
              </label>
            </p>
  
            <p>
              <label>
                <input name="days" value="Saturday" type="checkbox" <%=data.days.includes('Saturday')?'checked':'' %> />
                <span>Saturday</span>
              </label>
            </p>
  



          </div>
         </div>

         

          <div class="row">
            <div class="col s4" style="display:flex; justify-content:center;">
          <button class="btn waves-effect waves-light" type="submit" name="btn" value="Edit">Edit
            <i class="material-icons right">edit</i>
          </button>
          </div>
          <div class="col s4" style="display:flex; justify-content:center; font-size: 24;font-weight: bold;">
           
          </div>

          <div class="col s4" style="display:flex; justify-content:center;">
            <button class="btn waves-effect waves-light" type="submit" name="btn" value="Delete">Delete
              <i class="material-icons right">delete</i>
            </button>
            </div>
         </div> 
            

  
  </div>
  </div>
  
  </form>

  
  
  </body>
  <!--JavaScript at end of body for optimized loading-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
   
  </html>